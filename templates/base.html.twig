<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>
            {% block title %}
                Welcome!
            {% endblock %}
        </title>
        {# Run `composer require symfony/webpack-encore-bundle`
                   and uncomment the following Encore helpers to start using Symfony UX #}
        <link rel="stylesheet" href="https://bootswatch.com/5/lux/bootstrap.min.css">
        {% block stylesheets %}{#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        {% block javascripts %}{#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="{{ path('home') }}">
                   DEMO
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarColor02">
                    
                        <ul class="navbar-nav me-auto">
                            <li class="nav-item">
                            <a class="nav-link " href="{{ path('admin_employee') }}">Employés</a>
                            </li>
                        </ul>
                    {% if app.user %}
                        {% if app.user.username is same as ('Lanto') %}
                            {% if is_granted('ROLE_ADMIN') %}
                                <ul> 
                                    <li class="navbar-nav ml-auto">
                                    <a class="nav-link " href="{{ path('admin_employee_plan') }}">Administrer les employés</a>
                                    </li>
                                </ul>
                                {# <ul> 
                                    <li class="navbar-nav ml-auto">
                                    <a class="nav-link " href="{{ path('admin_comment_show') }}">Modérer les commentaires</a>
                                    </li>
                                </ul> #}
                            {% endif %}
                        {% endif %}
                        <ul> 
                            <li class="navbar-nav ml-auto">
                            <a class="nav-link " href="{{ path('security_logout') }}">Déconnexion</a>
                            </li>
                        </ul>
            
                    {% else %}
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item">
                                <a class="nav-link " href="{{ path('security_login') }}">Se connecter</a>
                            </li>
                        </ul>
                    {% endif %}
                    {# {{ if app.username}} #}

                </div>
            </div>
        </nav>
        <div class="container">
            {% block body %}{% endblock %}
        </div>
    </body>
</html>
