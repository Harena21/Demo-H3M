{% extends 'base.html.twig' %}

{% block title %}Administration{% endblock %}
  
{% block body %}
<div class="container">
    <h1>
        Gérer les biens
    </h1>
    {% for message in app.flashes('success') %}
        <div class="alert alert-success"> {{ message }}</div>
    {% endfor %}
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Titres</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for article in articles %}
                <tr>
                    <td>{{ article.title }}</td>
                    <td>
                        <a href="{{ path('admin_article_edit', {id: article.id})}}" class="btn btn-secondary">Editer</a>
                        <form method="post" action="{{ path('admin_article_delete', {id: article.id})}}" style="display: inline-block" onsubmit="return confirm('Are you sure?')">
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
                        <button class="btn btn-danger">Supprimer<button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <div class="text-right">
        <a href="{{ path('admin_article_create') }}" class="btn btn-success">Créer un bien</a>
    </div>
</div>
{% endblock %}
