{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-4">
        {{ form_start(form) }}
            {{ form_row(form.username, {label: "Nom d'utilisateur",attr: {placeholder: "Entrez votre nom d'utilisateur"} }) }} 
            {{ form_row(form.email, {label: "Email",attr: {placeholder: "Entrez votre email"} }) }}
            {{ form_row(form.password, {label: "Mot de passe",attr: {placeholder: "Entrez votre mot de passe"} }) }}
            {{ form_row(form.confirm_password, {label: "Confirmation du mot de passe",attr: {placeholder: "Confirmez votre mot de passe"} }) }}
            <button type="submit" class="btn btn-success mt-3">S'inscrire</button>
        {{ form_end(form) }}
    </div>
{% endblock %}