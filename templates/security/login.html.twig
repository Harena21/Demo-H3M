{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<h2>Connexion</h2>

<form action="{{ path('security_login') }}" method="post">
    <div class="form-group mb-2">
        <input type="text" name="_username" placeholder="Votre adresse mail" required class="form-control">
    </div>
    <div class="form-group mb-2">
        <input type="password" name="_password" placeholder="Votre mot de passe" required class="form-control">
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success">Se connecter</button>
    <a href="{{ path('inscription') }}">S'inscrire</a>
    </div>
</form>


{% endblock %}